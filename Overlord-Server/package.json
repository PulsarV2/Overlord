{
  "name": "overlord-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --target bun --minify --outdir dist",
    "build:css": "tailwindcss -i ./src/styles.css -o ./public/assets/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./public/assets/tailwind.css --watch"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.0.0",
    "adm-zip": "^0.5.12",
    "flag-icons": "latest",
    "geoip-lite": "latest",
    "jose": "^6.1.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/geoip-lite": "latest",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.6.3"
  }
}
